<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-sm-8 col-xl-4 my-4">
      <section class="bg-grey p-4">
	      <h2 class="mb-4">Забыли пароль?</h2>

				<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= f.error_notification %>

				  <div class="form-inputs">
				    <%= f.input :email, input_html: { "data-validation" => "required", "data-validation-error-msg" => "Заполните поле", :placeholder => "Ваш email", :required => false, :autofocus => true}, label: false %>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, "Отправить мне инструкцию", class: "btn btn-block btn-warning" %>
				  </div>
				<% end %>

        <div class="btn-group d-flex justify-content-center my-4">
					<%= link_to "Войти", new_session_path(resource_name), class: "btn btn-outline-warning" %>
					<%= link_to "Регистрация", new_registration_path(resource_name), class: "btn btn-outline-warning" %>
				</div>
			</section>
		</div>
	</div>
</div>
