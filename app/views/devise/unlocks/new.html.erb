<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-sm-8 col-xl-4 my-4">
      <section class="bg-grey p-4">
	      <h2 class="mb-4">Повторно отправить инструкции по разблокировке</h2>

				<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
				  <%= f.error_notification %>
				  <%= f.full_error :unlock_token %>

				  <div class="form-inputs">
				    <%= f.input :email, required: true, autofocus: true, label: false %>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, "Отправить" %>
				  </div>
				<% end %>

        <div class="btn-group d-flex justify-content-center my-4">
					<%= link_to "Войти", new_session_path(resource_name), class: "btn btn-outline-warning" %>
					<%= link_to "Регистрация", new_registration_path(resource_name), class: "btn btn-outline-warning" %>
				</div>
			</section>
		</div>
	</div>
</div>
