.container
  .row
    .col-12.col-lg-4#sidebar.mb-4
      %h2.text-orange.my-4 Каталог 
      .list-group
        = render "static_pages/aside_category"

      .card.rewiew.bg-grey.my-4.d-none.d-lg-block
        .card-header.p-2.text-black
          %small 27 ноября 2017 / Алексей Новиков
        .card-block.p-3
          %h6.card-title.text-orange Летковый заградитель круглый  диаметр 80 оцинкованный
          %p.card-text.text-black
            Some quick example text to build on the card title and make up the bulk of the card's content.
          = link_to "Подробней", root_path, class: "btn btn-warning"

      .card.rewiew.bg-grey.my-4.d-none.d-lg-block
