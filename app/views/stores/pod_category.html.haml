- meta :title => "«Nucleus» — интернет-магазин пчеловодства. #{@pod_category.title} для пчеловодов", :description => "#{@pod_category.title} для пчеловодов - описание, цена, отзывы. Низкие цены ✓Большой ассортимент ✓Собственное производство"
= content_for(:meta_og) do
  %meta{:content => "Nucleus - #{@pod_category.title} для пчеловодов", :property => "og:title"}/
  %meta{:content => "website", :property => "og:type"}/
  %meta{:content => "Nucleus", :property => "og:author"}/
  %meta{:content => "https://nucleus.com.ua", :property => "og:url"}/
  %meta{:name=>"twitter:card", :content=>"summary_large_image"}/
  %meta{:name=>"twitter:title", :content=>"Nucleus - #{@pod_category.title} для пчеловодов"}/
  %meta{:name=>"twitter:description", :content=>"#{@pod_category.title} для пчеловодов - описание, цена, отзывы. Низкие цены ✓Большой ассортимент ✓Собственное производство"}/
  = tag :meta, property: 'og:image', content: image_url(@pod_category.image_url.category)
  
.container
  .row
    .col-12.col-lg-4#sidebar.mb-4
      = render "static_pages/aside_category_hide"

      = render "reviews/aside_reviews_top"

    .col-12.col-lg-8
      %ol.breadcrumb.pb-0.pl-0
        %li.breadcrumb-item
          = link_to "Главная", root_path
        %li.breadcrumb-item
          = link_to @pod_category.category.title, show_category_path(@pod_category.category)
        %li.breadcrumb-item.active
          = @pod_category.title
      %h1.text-orange
        = @pod_category.title
      .row
        - @products.each do |product|
          - cache product do
            = render "product_row", product: product, order_item: @order_item

    = render "reviews/aside_reviews_bottom"

