.container
  .row
    .col-12.col-lg-4#sidebar.mb-4
      %h2.text-orange.my-4 Каталог 
      .list-group
        = render "static_pages/aside_category"

      = render "reviews/aside_reviews_top"

    .col-12.col-lg-8
      %ol.breadcrumb.pb-0.pl-0
        %li.breadcrumb-item
          = link_to "Главная", root_path
        %li.breadcrumb-item.active
          = @category.title
      %h1.text-orange
        = @category.title
      .row
        - @category.pod_categories.each do |pod_category|
          .col-3
            = link_to show_pod_category_path(@category, pod_category), class: "product-link" do
              .card.product.mb-2.bg-orange
                = image_tag pod_category.image_url.category, class: "card-img-top", title: "#{pod_category.title}"
                .card-block.d-flex.align-items-center.align-self-center
                  %h6.p-2.card-title.text-center.mb-0
                    = pod_category.title
        

    = render "reviews/aside_reviews_bottom"
