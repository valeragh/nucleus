- meta :title => "«Nucleus» — интернет-магазин пчеловодства. #{@post.title}", :description => "#{@post.title}. Низкие цены ✓Большой ассортимент ✓Собственное производство"
= content_for(:meta_og) do
  %meta{:content => "Nucleus - #{@post.title}", :property => "og:title"}/
  %meta{:content => "website", :property => "og:type"}/
  %meta{:content => "Nucleus", :property => "og:author"}/
  %meta{:content => "https://nucleus.com.ua", :property => "og:url"}/
  %meta{:name=>"twitter:card", :content=>"summary_large_image"}/
  %meta{:name=>"twitter:title", :content=>"Nucleus - #{@post.title}"}/
  %meta{:name=>"twitter:description", :content=>"#{@post.title}. Низкие цены ✓Большой ассортимент ✓Собственное производство"}/
  = tag :meta, property: 'og:image', content: image_url(@post.image_url.magazine)

.container
  .row
    .col-12.col-lg-4#sidebar.mb-4
      = render "static_pages/aside_category_hide"

      = render "reviews/aside_reviews_top"

    .col-12.col-lg-8
      %ol.breadcrumb.pb-0.pl-0
        %li.breadcrumb-item
          = link_to "Главная", root_path
        %li.breadcrumb-item
          = link_to "Новости", posts_path
        %li.breadcrumb-item.active
          = @post.title
      %h1.text-orange
        = @post.title
      = image_tag @post.image_url.magazine, class: "img-fluid"
      %blockquote.blockquote.text-orange.mt-4
        %p.mb-0
          = @post.shot_description
      %p.pt-4
        = @post.description
      - if @posts.present?
        %h2.text-orange.my-4
          Посмотрите также
        .row
          - @posts.each do |post|
            - cache post do
              = render partial: "posts/post", locals: { post: post }

    = render "reviews/aside_reviews_bottom"